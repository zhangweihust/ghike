<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/invitelistview"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="63dp"
     >

               <CheckBox
                android:id="@+id/invitelist_checkbox"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/checkbox" 
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"   
                android:button="@null"
                android:visibility="gone"     
                android:checked="true" />
   
     <zonesdk.in.android.games.in.widget.RoundImage
        android:id="@+id/invitelist_user_head"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_centerVertical="true" 
        android:layout_marginLeft="15dip" 
        android:contentDescription="@string/app_name" 
        
         />
    
    <RelativeLayout 
            android:id="@+id/invitelistview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/invitelist_user_head"
            
        >
        
        <TextView 
	    android:id="@+id/invitelist_user_name" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:textColor="@color/black"
	    android:textSize="16dp"
	    android:layout_alignParentLeft="true"
	    android:layout_marginTop="10dip"
	    android:layout_marginLeft="5dip"
	    
       />
        	
       <TextView 
	    android:id="@+id/invitelist_user_nickname" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:textColor="@color/orange"
	    android:textSize="16dp"
	    android:layout_toRightOf="@+id/invitelist_user_name"  
	    android:layout_marginLeft="3dip"  
	    android:layout_alignBottom="@+id/invitelist_user_name"
       />
	
		<TextView 
	    android:id="@+id/invitelist_user_phonenumber" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:textColor="@color/darkgray"
	    android:textSize="12sp"
	    android:layout_below="@+id/invitelist_user_name"   
	    android:layout_marginTop = "5dip"
	    android:layout_alignParentLeft="true"
	    android:layout_marginLeft = "5dip"
	    
       />
        
    </RelativeLayout>
    	
	    <ImageView
        android:id="@+id/invitelist_user_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:layout_centerVertical="true"   
        android:layout_alignParentRight="true"
        android:layout_marginRight = "10dip" 
        android:contentDescription="@string/app_name"      
         />
   <!--
   android:layout_marginRight = "15dip" 
    -->

</RelativeLayout>