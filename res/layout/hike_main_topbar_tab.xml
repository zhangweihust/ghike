<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
	<TextView
	    android:id="@+id/topbar_tab_text"
	    android:layout_height="30dp"
	    android:layout_width="wrap_content"
	    android:layout_alignParentBottom="true"
    	android:background="@color/topbar_tab_bg"
	    android:textSize="16dp"
	    android:gravity="center"
	    android:textColor="@color/white"
	    android:paddingLeft="8dp"
	    android:paddingRight="8dp"
	    />
	<TextView
	    android:id="@+id/topbar_tab_tip"
	    android:layout_width="wrap_content"
	    android:layout_height="14dp"
	    android:layout_marginTop="-4dp"
	    android:layout_alignRight="@id/topbar_tab_text"
	    android:layout_alignTop="@id/topbar_tab_text"
	    android:background="@drawable/topbar_tab_tip"
	    android:textSize="9dp"
	    android:paddingLeft="2dp"
	    android:paddingRight="2dp"
	    android:gravity="top|center"
	   	android:textColor="@color/black"
	    android:visibility="gone"
	    />
	<ImageView
	    android:contentDescription="@string/none"
	    android:src="@drawable/topbar_tabs_split"
	    android:layout_height="30dp"
	    android:layout_width="2dp"
	    android:layout_toRightOf="@id/topbar_tab_text"
	    android:layout_alignParentBottom="true"
	    />
</RelativeLayout>

    