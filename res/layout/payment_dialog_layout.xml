    <RelativeLayout
        android:id="@+id/linearLayoutUserMethod"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutPaymentOrderId"
        android:layout_marginTop="10dp" >
        
    <EditText
        android:layout_below="@+id/linearLayoutPaymentMethod"
        android:id="@+id/paymentPincodeText"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="@string/pincode"
        android:inputType = "textPassword"
        android:background="@drawable/btn_shape_white_rec"
        android:textSize="10sp" />
        
    <Button
        android:id="@+id/pincodeErrorText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paymentPincodeText"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/cancelbtn_shape_white"
        android:gravity="left"
        android:visibility="gone"
        android:textColor="@color/pincode"
        android:textSize="12sp"
        tools:context=".DialogActivity"
         />

    <Button
        android:id="@+id/paymentSureBtn"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/pincodeErrorText"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/paymentbtn"
        android:text="@string/gotorecharge"
        android:textColor="@color/white" 
        android:textSize="15sp"/>

    <Button
        android:id="@+id/paymentCancelBtn"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/paymentSureBtn"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/paymentcancel"
        android:text="@string/cancel"
        android:textColor="@color/paymenlist"
        android:textSize="15sp" />
    </RelativeLayout>

    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayoutUserMethod"
        tools:ignore="UselessLeaf" >
    </LinearLayout>

</RelativeLayout>
