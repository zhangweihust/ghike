<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@color/white" >
    
    <!-- 
    android:background="@drawable/linearlayout_shape_white" 
     -->

    <TextView
        android:id="@+id/titleView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/paymenttitle"
        android:textColor="@color/paymenttitle"
        android:textSize="17sp"
        tools:context=".DialogActivity" />

    <RelativeLayout
        android:id="@+id/linearLayoutHikeName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleView"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/hikeNameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:text="@string/nikename"
            android:textColor="@color/paymenlist"
            android:textSize="15dp"
            tools:context=".DialogActivity" />

        <TextView
            android:id="@+id/hikeNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/paymenlistid"
            android:textSize="15dp"
            tools:context=".DialogActivity" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearLayoutMobileNumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutHikeName"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/mobileNumberId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:text="@string/mobileNumber"
            android:textColor="@color/paymenlist"
            android:textSize="15dp"
            tools:context=".DialogActivity" />

        <TextView
            android:id="@+id/mobileNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/paymenlistid"
            android:textSize="15dp"
            tools:context=".DialogActivity" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearLayoutRechargeCount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutMobileNumber"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/RechargeCountId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:text="@string/rechargeAcount"
            android:textColor="@color/paymenlist"
            android:textSize="15dp"
            tools:context=".DialogActivity" />

        <TextView
            android:id="@+id/RechargeCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/RechargeCountCoinsText"
            android:textColor="@color/paymenlistid"
            android:textSize="15dp"
            tools:context=".DialogActivity" />
       <TextView
            android:id="@+id/RechargeCountCoinsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/paymenlistid"
            android:textSize="15dp"
            tools:context=".DialogActivity" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearLayoutPayment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutRechargeCount"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/actualPaymentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:text="@string/actualPayment"
            android:textColor="@color/paymenlist"
            android:textSize="15dp"
            tools:context=".DialogActivity" />

        <TextView
            android:id="@+id/actualPaymentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/actualPaymentRupeesText"
            android:textColor="@color/paymenlistid"
            android:textSize="15dp"
            tools:context=".DialogActivity" />
        
         <TextView
            android:id="@+id/actualPaymentRupeesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/paymenlistid"
            android:textSize="15dp"
            tools:context=".DialogActivity" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearLayoutPaymentMethod"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutPayment"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/PaymentMethodId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:text="@string/paymentMethod"
            android:textColor="@color/paymenlist"
            android:textSize="15dp"
            tools:context=".DialogActivity" />

        <TextView
            android:id="@+id/PaymentMethodText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="@string/paymenttext"
            android:textColor="@color/paymenlistid"
            android:textSize="15dp"
            tools:context=".DialogActivity" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/linearLayoutPaymentOrderId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutPaymentMethod"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/PaymentOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:text="@string/paymentOrderId"
            android:textColor="@color/paymenlist"
            android:textSize="15dp"
            tools:context=".DialogActivity" />

        <TextView
            android:id="@+id/PaymentOrderIdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/paymenlistid"
            android:textSize="15dp"
            tools:context=".DialogActivity" />
    </RelativeLayout>


